<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/artist_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/artist_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:src="@mipmap/ic_launcher"
        android:transitionName="artist_detail_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/artist_icon"
        android:layout_alignTop="@+id/artist_icon"
        android:layout_toEndOf="@+id/artist_icon"
        android:layout_toLeftOf="@+id/artist_icon"
        android:layout_toRightOf="@+id/artist_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Motorhead"/>

        <TextView
            android:id="@+id/artist_listeners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#9299A2"
            tools:text="Listeners : 120 000"/>
    </LinearLayout>

</RelativeLayout>